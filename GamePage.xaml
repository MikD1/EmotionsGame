<Page
    x:Class="EmotionsGame.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="EmotionTitle" Text="NaN" HorizontalAlignment="Center"
                       VerticalAlignment="Top" FontSize="30" Foreground="WhiteSmoke"/>

        <Grid Grid.Row="1">
            <CaptureElement x:Name="CaptureView"/>
            <Canvas x:Name="CanvasView"/>
        </Grid>

        <Grid Grid.Row="2">
            <TextBlock x:Name="Player1ScoreView" Text="0" HorizontalAlignment="Left"
                       VerticalAlignment="Bottom" FontSize="30" Foreground="WhiteSmoke"
                       FontWeight="Bold"/>
            <TextBlock x:Name="Player2ScoreView" Text="0" HorizontalAlignment="Right"
                       VerticalAlignment="Bottom" FontSize="30" Foreground="WhiteSmoke"
                       FontWeight="Bold"/>
        </Grid>
    </Grid>
</Page>
